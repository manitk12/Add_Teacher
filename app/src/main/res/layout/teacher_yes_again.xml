<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/xml_bg_pattern_first"
    tools:context="com.grademojo.add_teacher.Teacher">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="is class teacher?"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="26sp"
        />


    <android.support.v7.widget.CardView

        android:id="@+id/edit_card_view_genger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="40dp"
        >


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"



            >


            <FrameLayout
                android:id="@+id/frame_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="2.5dp"
                android:paddingBottom="2.5dp"
                >



                <TextView
                    android:id="@+id/text_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yes"
                    android:textAllCaps="true"

                    />

            </FrameLayout>



            <FrameLayout
                android:id="@+id/frame_no"
                android:layout_toEndOf="@+id/frame_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="2.5dp"
                android:paddingBottom="2.5dp"
                >


                <TextView


                    android:id="@+id/text_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="no"
                    android:textAllCaps="true"

                    />

            </FrameLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/toggle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#00ff00"
                android:layout_alignStart="@+id/frame_no"
                android:layout_alignEnd="@+id/frame_no"
                android:layout_alignTop="@+id/frame_no"
                android:layout_alignBottom="@+id/frame_no"
                app:cardElevation="5dp"
                android:layout_margin="1dp"


                />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:background="#31ffffff"

        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="4dp"

        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"

            >




            <TextView
                android:id="@+id/class_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="class"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingStart="15dp"
                android:paddingEnd="5dp"

                />





            <android.support.v7.widget.CardView

                android:id="@+id/edit_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="20dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="3dp"
                app:cardBackgroundColor="@color/white"


                >


                <TextView
                    android:id="@+id/edit_text_gender"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:text="XII"
                    android:gravity="center"
                    android:layout_marginEnd="7dp"
                    android:layout_marginStart="15dp"
                    >

                </TextView>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView

                android:id="@+id/edit_card_view_ten_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="17dp"

                app:cardElevation="5dp"
                android:layout_marginBottom="3dp"
                app:cardBackgroundColor="@color/white"
                >


                <TextView
                    android:id="@+id/edit_text_ten_class"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:text="VII"
                    android:gravity="center"
                    android:layout_marginEnd="7dp"
                    android:layout_marginStart="15dp"
                    >

                </TextView>

            </android.support.v7.widget.CardView>



        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="30dp"

            >


            <TextView
                android:id="@+id/subject_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="section"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"

                />



            <android.support.v7.widget.CardView

                android:id="@+id/edit_card_view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_marginTop="20dp"

                app:cardBackgroundColor="@color/white"

                >

                <TextView
                    android:id="@+id/edit_text_gender1"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:text="C"
                    android:gravity="center"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="8dp"
                    >

                </TextView>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView

                android:id="@+id/edit_card_view_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/white"
                >


                <TextView
                    android:id="@+id/edit_text_section"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:text="A"
                    android:gravity="center"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="8dp"
                    >


                </TextView>


            </android.support.v7.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"

            >





            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/remove_icon"
                android:layout_marginTop="46dp"

                />









            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/remove_icon"
                android:layout_marginTop="30dp"



                />


        </LinearLayout>



    </LinearLayout>



    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="#31ffffff"

        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"


        >


        <android.support.v7.widget.CardView

            android:id="@+id/edit_card_view_nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="22dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="3dp"
            app:cardBackgroundColor="@color/white"
            >


            <Spinner
                android:id="@+id/edit_text_nine"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:popupBackground="#ffffff"
                android:background="@null"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="15dp"
                >

            </Spinner>


            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/arrow"
                android:layout_marginStart="50dp"
                android:layout_marginTop="13dp"
                android:rotation="90"
                android:alpha="0.2"

                />



        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView

            android:id="@+id/edit_card_view_nine_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="22dp"
            app:cardElevation="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="35dp"
            app:cardBackgroundColor="@color/white"


            >


            <Spinner
                android:id="@+id/edit_text_nine_section"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:popupBackground="#ffffff"
                android:background="@null"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="8dp"
                >


            </Spinner>


            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/arrow"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12dp"
                android:rotation="90"
                android:alpha="0.2"

                />



        </android.support.v7.widget.CardView>

    </LinearLayout>


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/plus"
        android:layout_marginTop="20dp"


        />












    <android.support.v7.widget.CardView

        android:id="@+id/edit_card_view_next_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_below="@+id/edit_card_view_genger"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="5dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"


        >



        <TextView
            android:id="@+id/edit_text_next_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:textColor="@color/grey"
            android:textSize="16sp"

            android:background="#00000000">

        </TextView>



    </android.support.v7.widget.CardView>









</LinearLayout>
