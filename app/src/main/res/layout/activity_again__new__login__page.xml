<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_background"
    android:gravity="center_horizontal"
    tools:context="com.grademojo.add_teacher.Again_New_Login_Page">


    <android.support.v7.widget.CardView
        android:id="@+id/cardParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="60dp"

        >


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/avatar_student"
            android:layout_margin="3dp"

            />




    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Cena"
        android:textColor="#efefef"
        android:textSize="18sp"
        android:layout_marginTop="10dp"


        />


    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"


        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >







            <ImageView
                android:id="@+id/user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_proged_user_1797c8_18dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/user_image"
                android:background="#00000000"
                android:inputType="textEmailSubject"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/user_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_proged_password_1797c8_18dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/user_image2"
                android:background="#00000000"
                android:inputType="textPassword"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Login"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="#1794a8"
            android:textStyle="bold"
            android:paddingTop="10dp"
            />

        </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

        <View
            android:id="@+id/first_view_line"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="#4fadbc"
            android:layout_marginTop="7dp"

            />

        <TextView
            android:id="@+id/text_view_social_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/first_view_line"
            android:layout_marginStart="20dp"
            android:text="social login"
            android:textColor="#4fadbc"
            android:textAllCaps="true"
            />


        <View
            android:id="@+id/second_view_line"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="#4fadbc"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/text_view_social_login"
            android:layout_marginStart="20dp"
            />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/googlef"

            />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/facebook"
            android:layout_marginStart="10dp"

            />

    </LinearLayout>


</LinearLayout>
