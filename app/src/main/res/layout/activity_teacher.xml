<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/xml_bg_pattern"
    tools:context="com.grademojo.add_teacher.Teacher">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="is class teacher?"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="26sp"
        />







    <android.support.v7.widget.CardView

        android:id="@+id/edit_card_view_genger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="40dp"
        >


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

           <TextView
               android:id="@+id/text_yes"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="yes"
               android:padding="10dp"
               android:textAllCaps="true"

               />


            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignTop="@+id/text_yes"
                android:layout_alignStart="@+id/text_yes"
                android:layout_alignEnd="@+id/text_yes"



                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/text_yes"
                android:layout_alignStart="@+id/text_yes"
                android:layout_alignEnd="@+id/text_yes"



                />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/text_yes"
                android:layout_alignTop="@+id/text_yes"
                android:layout_alignBottom="@+id/text_yes"



                />


            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/text_yes"
                android:layout_alignTop="@+id/text_yes"
                android:layout_alignBottom="@+id/text_yes"



                />


            <TextView


                android:id="@+id/text_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/text_yes"
                android:text="no"
                android:layout_marginStart="10dp"
                android:padding="10dp"
                android:textAllCaps="true"

                />


            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignTop="@+id/text_no"
                android:layout_alignStart="@+id/text_no"
                android:layout_alignEnd="@+id/text_no"



                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/text_no"
                android:layout_alignStart="@+id/text_no"
                android:layout_alignEnd="@+id/text_no"



                />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/text_no"
                android:layout_alignTop="@+id/text_no"
                android:layout_alignBottom="@+id/text_no"



                />


            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/text_no"
                android:layout_alignTop="@+id/text_no"
                android:layout_alignBottom="@+id/text_no"



                />



    </RelativeLayout>


    </android.support.v7.widget.CardView>








    <android.support.v7.widget.CardView

        android:id="@+id/edit_card_view_next_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_below="@+id/edit_card_view_genger"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="5dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"


        >



        <TextView
            android:id="@+id/edit_text_next_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:textColor="@color/grey"
            android:textSize="16sp"

            android:background="#00000000">

        </TextView>



    </android.support.v7.widget.CardView>









</LinearLayout>
