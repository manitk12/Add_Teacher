<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xml_bg_pattern"
    android:gravity="center_horizontal"
    tools:context="com.grademojo.add_teacher.MainActivity">





    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        >





        <android.support.v7.widget.CardView

            android:id="@+id/edit_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            android:layout_margin="2dp"

            app:cardBackgroundColor="@color/white"




            >

            <EditText
                android:id="@+id/edit_text_name"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:hint="Name"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:textColor="#121212"
                android:textColorHint="#646464"
                android:background="#00000000">

                </EditText>



        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView

            android:id="@+id/edit_card_view_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_below="@+id/edit_card_view"
            android:layout_marginTop="20dp"
            app:cardElevation="5dp"


            app:cardBackgroundColor="@color/white"




            >

            <EditText
                android:id="@+id/edit_text_phone"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:hint="Phone no."
                android:layout_marginStart="20dp"
                android:textColor="#121212"
                android:textColorHint="#646464"
                android:textSize="16sp"

                android:background="#00000000">

            </EditText>



        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView

            android:id="@+id/edit_card_view_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_below="@+id/edit_card_view_phone"
            android:layout_marginTop="20dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/white"


            >



            <EditText
                android:id="@+id/edit_text_email"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:hint="Email"
                android:layout_marginStart="20dp"
                android:textColor="#121212"
                android:textColorHint="#646464"
                android:textSize="16sp"

                android:background="#00000000">

            </EditText>



        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView

            android:id="@+id/edit_card_view_genger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_below="@+id/edit_card_view_email"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            app:cardElevation="5dp"

            app:cardBackgroundColor="@color/white"


            >




            <Spinner
                android:id="@+id/edit_text_gender"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:popupBackground="#ffffff"
                android:background="@null"
                >

            </Spinner>


            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/arrow"
                android:layout_marginStart="100dp"
                android:layout_marginTop="13dp"
                android:rotation="90"

                />



        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView

            android:id="@+id/edit_card_view_next_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_below="@+id/edit_card_view_genger"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            app:cardElevation="5dp"
           android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"


            >



            <TextView
                android:id="@+id/edit_text_next_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:textColor="@color/grey"
                android:textSize="16sp"

                android:background="#00000000">

            </TextView>



        </android.support.v7.widget.CardView>




    </RelativeLayout>






















</LinearLayout>
